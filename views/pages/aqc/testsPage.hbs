<h2>Тесты</h2>
{{#if testFail}}
  <blockquote class="alert-red">
    {{testFail}}
  </blockquote>
{{/if}}
{{#if testSuccess}}
  <blockquote class="alert-green">
    {{testSuccess}}
  </blockquote>
{{/if}}
{{#if passedTests}}
  <div class="section">
    <h4>Пройденные тесты</h4>
    <ul class="collection aqc-tests-collection-item">
  {{#each passedTests}}
    <li class="collection-item">
      {{testTitle}} <span class="grey-text">({{qualificationTitle}})</span>
    </li>
  {{/each}}
    </ul>
  </div>
{{/if}}
{{#if testsGroups.length}}
  {{#each testsGroups}}
    {{#if tests.length}}
      <div class="section">
        <h4>{{professionTitle}}</h4>
        <div class="row">
          {{#each tests}}
            <div class="col s4">
              <a href="/aqc/tests/id/{{_id}}">
                <div class="card medium">
                  <div class="card-content">
                    <div class="row">
                      <div class="col s12 center">
                        <i class="material-icons aqc-category-card-icon blue-text text-darken-3">quiz</i>
                      </div>
                    </div>
                    <div class="card-title grey-text text-darken-3 ">
                      {{testTitle}}
                    </div>
                    <p class="grey-text">
                      {{qualificationTitle}}
                    </p>
                  </div>
                  <div class="card-action">
                    <div class="blue-text text-darken-3 aqc-category-card-title">Пройти тест</div>
                  </div>
                </div>
              </a>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  {{/each}}
{{else}}
  <h5>Тесты еще не добавлены</h5>
{{/if}}


