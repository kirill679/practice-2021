<h2>Новости</h2>
{{#if news.length}}
  <div class="row">
    {{#each news}}
      <div class="col s6">
        <div class="card">
          <div class="card-image">
            <img src="{{imgUrl}}" alt="{{title}}" class="news-card-img">
          </div>
          <div class="card-content">
            <span class="card-title truncate">{{title}}</span>
            <div class="truncate grey-text text-darken-1">{{text}}</div>
          </div>
          <div class="card-action">
            <a class="blue-text text-darken-3" href="/news/id/{{_id}}">Читать дальше</a>
            {{#if @root.isAuth}}
              {{#if @root.isAdmin}}
                <a class="blue-text text-darken-3" href="/news/id/{{_id}}/edit">Изменить</a>
              {{/if}}
            {{/if}}
            <span class="date grey-text text-darken-1 right">{{dateAdded}}</span>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h5 class="px">Новостей пока нет</h5>
{{/if}}