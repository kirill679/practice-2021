<h1 class="px">Добавить новость</h1>
<br>
<div class="row">
  <div class="col s12">
    <form action="/news/add" method="POST" autocomplete="off">
      <div class="col s12 input-field">
        <input type="text" name="title" id="title" class="validate" required>
        <label for="title">Название новости</label>
        <span class="helper-text" data-error="Некорректное название"></span>
      </div>
      <div class="input-field col s12">
        <input type="text" name="imgUrl" id="imgUrl" class="validate" required>
        <label for="imgUrl">URL картинки</label>
        <span class="helper-text" data-error="Некорректный URL картинки"></span>
      </div>
      <div class="input-field col s12">
        <textarea name="text" id="textarea" class="materialize-textarea validate" required></textarea>
        <label for="textarea">Текст новости</label>
        <span class="helper-text" data-error="Некорректное содержимое новости"></span>
      </div>
      <button class="btn waves-effect waves-light blue darken-3" type="submit"><i class="material-icons left">done</i>Добавить
      </button>
    </form>
  </div>
</div>
